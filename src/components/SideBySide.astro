---
import Image from 'astro/components/Image.astro';
const { img , reverse, imgReverse } = Astro.props
const order = reverse ? 'sm:flex-row-reverse justify-end' : 'sm:flex-row'
---

<div class="flex flex-col justify-center items-center justify-items-center mx-auto" class:list={[order]}>
    <div class="text-4xl max-w-[45ch]">
        <slot />
    </div>
        <Image src={img} alt="doodle me" 
                class="invert max-w-[250px] min-w-[160px] lg:p-10 p4" 
                class:list={[
                    {'scale-x-[-1]' : imgReverse}
                ]}/>
</div>