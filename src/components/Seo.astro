---
const {
    url = Astro.url,
    title,
    description,
    image,
} = Astro.props
---

<!-- SEO -->
<link
    rel='canonical'
    href={url}
/>

<!-- Open Graph -->
<meta
    property='og:site_name'
    content='Site Name'
/>
<meta
    property='og:title'
    content={title}
/>
<meta
    property='og:description'
    content={description}
/>
<meta
    property='og:url'
    content={url}
/>
<meta
    property='og:image'
    content={image?.src}
/>
<meta
    property='og:image:url'
    content={image?.src}
/>
<meta
    property='og:image:secure_url'
    content={image?.src}
/>
<meta
    property='og:image:type'
    content='image/jpeg'
/>
<meta
    property='og:image:width'
    content='1200'
/>
<meta
    property='og:image:height'
    content='600'
/>
<meta
    property='og:image:alt'
    content={image?.alt}
/>

<!-- Twitter -->
<meta
    name='twitter:title'
    content={title}
/>
<meta
    name='twitter:description'
    content={description}
/>
<meta
    name='twitter:card'
    content='summary_large_image'
/>
<meta
    name='twitter:image'
    content={image?.src}
/>
<meta
    name='twitter:image:alt'
    content={title}
/>

<!-- Using environment domain -->
<meta
    name='twitter:domain'
    content={import.meta.env.SITE}
/>
