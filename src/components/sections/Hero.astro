---
import Section from '../Section.astro'
import HeroText from '../sections/HeroText.astro'
import Contact from '../sections/Contact.astro'
import Squares from '../sections/Squares.astro'
import Redacted from '../RedactedText.astro'
---

<Section id="hero" fullH={true} flexC={true}>
    <div class="flex flex-col grow">
        <HeroText />
        <Contact />
        <Squares>
            <h1 class="text-2xl sm:text-4xl text-center overflow-clip font-medium">
                <span><Redacted>Not</Redacted> your typical </span>
                <span class="inline-block">web developer</span>
            </h1>
        </Squares>
        
        <div class="flex justify-center">
            <h2 class="text-6xl text-center">Welcome to the Desert of the Real</h2>
        </div>

    </div>
</Section>